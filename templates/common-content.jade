extends base
- load staticfiles
block media
    link(rel='stylesheet', href='{% static "content-description.css" %}')
    link(rel='stylesheet', href='{% static "pygment-github.css" %}', type='text/css')
    script(type='text/javascript')
        $(function () {
            var info_float = $('.info-float');
            var container = $('#content-right');
            fix_div(info_float, 40);
            $(window).resize(function() {
                info_float.width(container.width());
            });
            info_float.width(container.width());
        });
    style
        #content-body {
            display: -webkit-box;
            display: -webkit-flex;
            display: -ms-flexbox;
            display: flex;
            -webkit-box-orient: horizontal;
            -webkit-box-direction: reverse;
            -webkit-flex-direction: row-reverse;
                -ms-flex-direction: row-reverse;
                    flex-direction: row-reverse;
        }

        #content-left {
            -webkit-box-flex: 84%;
            -webkit-flex: 84%;
                -ms-flex: 84%;
                    flex: 84%;
            width: 100%;
        }

        #content-right {
            -webkit-box-flex: 16%;
            -webkit-flex: 16%;
                -ms-flex: 16%;
                    flex: 16%;
            max-width: 12.5em;
            min-width: 8em;
            padding-left: 1em; 
        }

        .content-description {
            width: 100%;
        }

    block content_media
block body
    #content-right
        .info-float(style='float: none; padding: 10px 0 0 0')
            block info_float
    #content-left
        .content-description.screen
            block description
            hr
        block comments
block bodyend
    include mathjax_load
