extends user/base_users

- load staticfiles
- load cache

block users_media
    link(rel='stylesheet', href='{% static "rating.css" %}')
    script(src='{% static "tablesorter.js" %}', type='text/javascript')
    script(type='text/javascript')
        $(document).ready(function () {
            $("#users-table").tablesorter();
        });
    style
        #users-table .rate-box {
            font-size: 0.85em;
            float: left;
        }

        #users-table .rating {
            margin-left: 1.25em;
            display: block;
        }

        #users-table td:nth-child(2), #users-table th:nth-child(2) {
            border-right: none;
        }

block users_table
    include user/users_table
