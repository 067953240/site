extends user/base_users_table
- load rating

block after_rank_head
    th
    th

block after_rank
    td
        a(href='{% url "user_rating" user.user.username %}')
            span.rate-box(class='{{ user.rating|rating_class }}')
                span(style='height: {{ user.rating|rating_progress }}em')
    td
        if user.rating
            a.rating(class='{{ user.rating|rating_class }}', title='{{ user.rating|rating_name }}',
                     href='{% url "user_rating" user.user.username %}') #{user.rating}

block after_point_head
    th.problems Problems

block after_point
    td #{user.problems}
