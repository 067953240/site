-load gravatar
-load markdown_trois_tags
li.comment(id='comment-{{comment.id}}')
    .comment-box
        div(style='float:left')
            if request.user.is_authenticated
                a.upvote-link(href='javascript:comment_upvote({{comment.id}})')
            else
                br
            br
            .comment-score #{comment.score}
            if request.user.is_authenticated
                a.downvote-link(href='javascript:comment_downvote({{comment.id}})')
            else
                br
            br
        .comment-header
            a.comment-link(name='comment-{{comment.id}}-link')
            span.comment-author
                span(class=comment.author.display_rank)
                    a(href='{% url "judge.views.user" comment.author.user.username %}') #{comment.author.user.username}
            |&nbsp;on
            span.comment-time &nbsp;#{comment.time|date:"N j, o, g:i a"}
            | &nbsp;
            span.comment-title #{comment.title}
            span.comment-operation
                a(href='javascript:comment_set_parent({{comment.id}})') &nbsp;Reply
                if perms.judge.change_comment
                    a(href='{% url "admin:judge_comment_change" comment.id %}') &nbsp;Admin
        .comment-body #{comment.body|markdown:"comment"}
    -with replies=comment.replies.all
        if replies
            ul.comments
                each reply in replies
                    -with comment=reply template='comment/comment.jade'
                        -include template
