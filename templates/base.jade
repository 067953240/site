doctype 5
-load staticfiles
-load strings
-load variables
html(lang='en')
    head
        title
            block title
                | DMOJ | #{title}
        meta(http-equiv='Content-Type', content='text/html; charset=utf-8')
        link(rel='stylesheet', href='{% static "style.css" %}')
        link(rel='canonical', href='http://{{ site.domain }}{{ request.get_full_path }}')
        script(src='//ajax.googleapis.com/ajax/libs/jquery/1.11.0/jquery.min.js')
        script(src='{% static "navbar.js" %}')
        block css

    body
        noscript This site works best with JavaScript enabled.
        #header.unselectable
            h1
                span(style='color: #FFDE05') DM::
                | OJ
        header
            nav#navigation.unselectable
                ul
                    li
                        if nav_tab == 'home'
                            a(class='active', href='/') Home
                        else
                            a(href='/') Home
                    li
                        if nav_tab == 'problem'
                            a(class='active', href='/problems/') Problems
                        else
                            a(href='/problems/') Problems   
                    li
                        if nav_tab == 'submit'
                            a(class='active', href='/submissions/') Submissions
                        else
                            a(href='/submissions/') Submissions
                    li
                        if nav_tab == 'user'
                            a(class='active', href='/users/') Users
                        else
                            a(href='/users/') Users
                    li
                        if nav_tab == 'home'
                            a(class='about', href='/about/') About
                        else
                            a(href='/about/') About
                span#user-links
                    if request.user.is_authenticated
                        a(href='{% url "judge.views.user" %}')
                            | Hello,&nbsp;
                            b #{request.user.username}
                        | &nbsp;|
                        if request.user.is_staff or request.user.profile.is_admin
                            a(href='{% url "admin:index" %}') admin
                            | &nbsp;|
                        a(href='{% url "django.contrib.auth.views.logout" %}?next=')
                            | &nbsp;log out
                    else
                        a(href='{% url "django.contrib.auth.views.login" %}?next={{ request.get_full_path|urlencode }}')
                            b Login
                        | &nbsp;|&nbsp
                        a(href='/accounts/register/') Register
        br
        div#content
            h2(style='color:#393630')
                block content_title
                    | #{title}
            block header
            hr
            br
            block body
            footer
                p Generated on {% now "H:i:s, F d, Y O" %}




