extends base

block body
    table.table
        thead
            tr
                th ID
                th Name
                th Category
                th Runtime Info
        tbody
            each language in languages
                tr
                    td= language.short_display_name
                    td
                        a(href='{% url "runtime_info" language.key %}')= language.name
                    td= language.common_name
                    td= language.info