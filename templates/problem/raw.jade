- load staticfiles
- load mathtag
- load markdown_trois_tags
- load cache
- load smart_math

block media
    link(rel='stylesheet', href='{% static "content-description.css" %}')
    link(rel='stylesheet', href='{% static "pygment-github.css" %}', type='text/css')
    script(type='text/javascript')
        $(function () {
            fix_div($('.info-float'), 40, true, function (info) {
                return $('<div/>', {id: 'fake-info-float', class: 'info-float'}).css({
                    'width': '11%',
                    'max-width': '10em',
                    'padding-left': '1em',
                    'display': 'table-cell'
                }).prependTo('#content-body');
            });
        });
    style
        a.view-pdf {
            padding-top: 1em;
        display: inline-block;
        }
        .problem-title {
            display: flex;
        }
        .problem-title .spacer {
            display: inline-block;
            flex: 1 1 0;
        }
block body
    .content-description
        block description
        hr
block bodyend
    include mathjax_load

block title_row
    div.problem-title
        h2(style='color:#393630; display: inline-block')= title

block description
    | #{problem.description | markdown:"problem"|smart_math}