extends ../base
- load cache

block body
    br
    table.table
        thead
            tr
                th ID
                th(style='width:85%') Name
                th Members
        tbody
            each org in organizations
                tr
                    td= org.key
                    td
                        a(href='{% url "organization_home" org.key %}')= org.name
                    td
                        - cache 86400 org_member_count org.id
                            a(href='{% url "organization_users" org.key %}')= org.member_count
